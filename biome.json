{
	"$schema": "https://biomejs.dev/schemas/1.5.2/schema.json",
	"files": {
		"ignore": ["public", "src/main.tsx", "src/components/ui"],
		"include": ["src/**/*.tsx", "src/**/*.ts"]
	},
	"organizeImports": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"indentWidth": 2
		}
	},
	"linter": {
		"rules": {
			"correctness": {
				"noNodejsModules": "error"
			},
			"a11y": {
				"noSvgWithoutTitle": "off",
				"useValidAnchor": "off"
			},
			"complexity": {
				"noForEach": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "off"
			}
		}
	},
	"overrides": [
		{
			"include": [
				"next.config.js",
				"layout.tsx",
				"page.tsx",
				"loading.tsx",
				"error.tsx",
				"not-found.tsx"
			],
			"linter": {
				"rules": {
					"style": {
						"noDefaultExport": "off"
					}
				}
			}
		}
	]
}
